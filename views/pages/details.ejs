<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../layout/head') %>
</head>

<body>
    <header>
        <%- include('../layout/header') %>
    </header>

    <main>
        <section>
            <p>
                <%= character.name %>
            </p>
            <p>
                <%= character.house %>
            </p>
            <p>
                <%= character.patronus %>
            </p>
            <p>
                <%= character.is_alive %>
            </p>
            <form action="/character/<%= character.id %>?_method=put" method="post">
                <input type="text" name="name" value="<%= character.name %>">
                <input type="text" name="house" value="<%= character.house %>">
                <input type="text" name="patronus" value="<%= character.patronus %>">
                <select name="alive">
                <% if(character.is_alive) {%>
                    <option value="t">Alive</option>
                    <option value="f">Dead</option>
                <%} else {%>
                    <option value="t">Dead</option>
                    <option value="f">Alive</option>
                    <% } %>  

            </select>
                <input type="submit" value="update">
            </form>
            <form action="/character/<%= character.id %>?_method=delete" method="post">
                <input type="submit" value="delete">
            </form>
        </section>
    </main>

    <footer>
        <%- include('../layout/footer') %>
    </footer>
</body>


</html>